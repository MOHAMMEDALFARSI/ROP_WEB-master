
@section PageTitle {
    @Resource.v_m
}


@{
    ViewBag.Title = Resource.v_m;
}
@section arurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "ar-OM", view="Vision_Mission",cont="AboutROP"}  )">
        <i class="fa fa-globe"></i> عربي
    </a>
}

@section enurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "en-US",view="Vision_Mission",cont="AboutROP" } )">
        <i class="fa fa-globe"></i> En
    </a>
}
@{

    var url = Request.Url.ToString();
}
@using ROP_WEB.Res


<div class="container">
    <div class="row">

        <div class="col breadcrumbstyle" style="padding:0">
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../../home/index">@Resource.home</a></li>
                    <li class="breadcrumb-item">@Resource.about</li>
                    <li class="breadcrumb-item active">@Resource.v_m  </li>

                    <li class="readspeakercls">
                        <div id="readspeaker_button1" class="rs_skip rsbtn rs_preserve" style="margin-bottom:0;">
                            <a rel="nofollow" class="rsbtn_play" accesskey="L" title="@Resource.listen2" href="https://app-as.readspeaker.com/cgi-bin/rsent?customerid=5953&amp;lang=@Resource.listen3lang&amp;readid=item1&amp;url=@url">
                                <span class="rsbtn_left rsimg rspart"><span class="rsbtn_text"><span>@Resource.listen</span></span></span>
                                <span class="rsbtn_right rsimg rsplay rspart"></span>
                            </a>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>
    </div>



    <div class="container">

        <div class="row">


            <div class="col-md-8">

                <div class="jumbotron" style="padding:25px; padding-bottom:0;">
                    <h3>  @Resource.v_m </h3>

                    <h4> @Resource.viss</h4>
                    <p>

                        @Resource.vissionmsg


                    </p>

                    <h4> @Resource.miss </h4>
                    <p>

                        المحافظة على النظام والأمن العام والآداب وحماية الأرواح والأموال والأعراض، وكفالة الطمأنينة والسكنية في كافة المجالات، والعمل على منع ارتكاب الجرائم، وضبط ما يقع منها، واتخاذ إجراءات التحري وجمع الاستدلالات، والمشاركة في عملية التنمية الاجتماعية وتلبية الاستغاثة والنجدة وتوعية المجتمع.

                    </p>

                </div>


            </div>

            <div class="col-md-4">
                <ul class="list-group">
                    <li class="list-group-item"> <a href="../../../AboutROP/GeneralInfo">@Resource.about1  </a></li>
                    <li class="list-group-item activelist"> <a href="../../../AboutROP/Vision_Mission">@Resource.v_m  </a></li>
                    <li class="list-group-item "><a href="../../../AboutROP/Organization">@Resource.about2 </a></li>
                    <li class="list-group-item "><a href="../../../AboutROP/Achivachievements">@Resource.achivment </a></li>


                </ul>

            </div>
        </div>



    </div>
</div>

