@section PageTitle {
    @Resource.contactuspage
}


@section arurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "ar-OM", view="ContactUs",cont="Contact"}  )">
        <i class="fa fa-globe"></i> عربي
    </a>
}

@section enurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "en-US",view="ContactUs",cont="Contact"}  )">
        <i class="fa fa-globe"></i> En
    </a>
}
@{

    var url = Request.Url.ToString();
}

@using ROP_WEB.Res


<div class="container">
    <div class="row">

        <div class="col breadcrumbstyle" style="padding:0">
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../../home/index">@Resource.home</a></li>
                    <li class="breadcrumb-item">@Resource.contact</li>
                    <li class="breadcrumb-item active">@Resource.contactuspage </li>
                    <li class="readspeakercls">
                        <div id="readspeaker_button1" class="rs_skip rsbtn rs_preserve" style="margin-bottom:0;">
                            <a rel="nofollow" class="rsbtn_play" accesskey="L" title="@Resource.listen2" href="https://app-as.readspeaker.com/cgi-bin/rsent?customerid=5953&amp;lang=@Resource.listen3lang&amp;readid=item1&amp;url=@url">
                                <span class="rsbtn_left rsimg rspart"><span class="rsbtn_text"><span>@Resource.listen</span></span></span>
                                <span class="rsbtn_right rsimg rsplay rspart"></span>
                            </a>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>
    </div>



    <div class="container">

        <div class="row">


            <div class="col-md-8">

                <div class="jumbotron" style="padding:25px; padding-bottom:0; text-align:center">
                    <h3>@Resource.contactuspage</h3>
                    <p>
                        في حالة وجود أي شكوى أو مقترح أو إستفسار أو بلاغ حول الموقع الإلكتروني
                        أو خدمات الشرطة يرجى إرسال رسالة عبر البريد الإلكتروني
                    </p>


                    <a href="mailto:name@email.com">info@rop.gov.om </a>


                </div>
            </div>

            <div class="col-md-4">
                <ul class="list-group">
                    <li class="list-group-item activelist"> <a href="../../../contact/ContactUs">@Resource.contactuspage  </a></li>
                    <li class="list-group-item"><a href="../../../contact/ropphones">@Resource.ropphones </a></li>
                    <li class="list-group-item"><a href="../../../contact/workTimes">@Resource.worktime </a></li>
                    <li class="list-group-item"><a href="../../../contact/FAQ">@Resource.faq </a></li>
                    <li class="list-group-item"><a href="../../../contact/Survey">@Resource.survey </a></li>

                </ul>

            </div>
        </div>

    </div>
</div>