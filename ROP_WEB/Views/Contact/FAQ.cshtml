
@section PageTitle {
    @Resource.faq
}

@section arurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "ar-OM", view="FAQ",cont="Contact"}  )">
        <i class="fa fa-globe"></i> عربي
    </a>
}

@section enurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "en-US",view="FAQ",cont="Contact" } )">
        <i class="fa fa-globe"></i> En
    </a>
}
@{

    var url = Request.Url.ToString();
}

@using ROP_WEB.Res

@model IEnumerable<ROP_WEB.Models.FAQMain>
<div class="container TopicStyle">
    <div class="row">

        <div class="col breadcrumbstyle" style="padding:0">
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../../home/index">@Resource.home</a></li>
                    <li class="breadcrumb-item">@Resource.contact</li>

                    <li class="breadcrumb-item active">@Resource.faq  </li>
                    <li class="readspeakercls">
                        <div id="readspeaker_button1" class="rs_skip rsbtn rs_preserve" style="margin-bottom:0;">
                            <a rel="nofollow" class="rsbtn_play" accesskey="L" title="@Resource.listen2" href="https://app-as.readspeaker.com/cgi-bin/rsent?customerid=5953&amp;lang=@Resource.listen3lang&amp;readid=item1&amp;url=@url">
                                <span class="rsbtn_left rsimg rspart"><span class="rsbtn_text"><span>@Resource.listen</span></span></span>
                                <span class="rsbtn_right rsimg rsplay rspart"></span>
                            </a>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>
    </div>



    <div class="container ">

        <div class="row">


            <div class="col-md-8">

                <div class="jumbotron" style="padding:25px; padding-bottom:0;">
                    <h3>@Resource.faq </h3>


                    <div class="accordion" id="accordion12">
                        @foreach (var item in Model)
                        {
                            <div class="card card-default">
                                <div class="card-header" id="collapse12HeadingOne">
                                    <h4 class="card-title m-0">
                                        <a class="accordion-toggle" data-toggle="collapse" data-target="#@item.FAQID" aria-expanded="true" aria-controls="collapse12One">
                                            @item.Question
                                        </a>
                                    </h4>
                                </div>
                                <div id="@item.FAQID" class="collapse show" aria-labelledby="collapse12HeadingOne" data-parent="#accordion12">
                                    <div class="card-body">
                                        <p class="mb-0">  @item.Answer</p>
                                    </div>
                                </div>
                            </div>

                        </div>

                    }


                    </div>


                </div>
                <div class="col-md-4">
                    <ul class="list-group">
                        <li class="list-group-item"> <a href="../../../contact/ContactUs">@Resource.contactuspage  </a></li>
                        <li class="list-group-item"><a href="../../../contact/ropphones">@Resource.ropphones </a></li>
                        <li class="list-group-item"><a href="../../../contact/workTimes">@Resource.worktime </a></li>
                        <li class="list-group-item activelist"><a href="../../../contact/FAQ">@Resource.faq </a></li>
                        <li class="list-group-item"><a href="../../../contact/Survey">@Resource.survey </a></li>


                    </ul>

                </div>
            </div>



        </div>
    </div>

