@using ROP_WEB.Res
@model IEnumerable<ROP_WEB.Models.Magazin>

<div class="container">
    <div class="row">

        <div class="col breadcrumbstyle" style="padding:0">
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../../home/index">@Resource.home</a></li>
                    <li class="breadcrumb-item">@Resource.media</li>
                    <li class="breadcrumb-item">@Resource.md6  </li>
                    <li class="readspeakercls">
                        <div id="readspeaker_button1" class="rs_skip rsbtn rs_preserve" style="margin-bottom:0;">
                            <a rel="nofollow" class="rsbtn_play" accesskey="L" title="@Resource.listen2" href="https://app-as.readspeaker.com/cgi-bin/rsent?customerid=5953&amp;lang=@Resource.listen3lang&amp;readid=item1&amp;url=@url">
                                <span class="rsbtn_left rsimg rspart"><span class="rsbtn_text"><span>@Resource.listen</span></span></span>
                                <span class="rsbtn_right rsimg rsplay rspart"></span>
                            </a>
                        </div>
                    </li>

                </ol>
            </nav>
        </div>
    </div>



    <div class="container">

        <div class="row">


            <div class="col-md-8">
                <div class="jumbotron" style="padding:25px; padding-bottom:0;">
                    <h3 style="text-align:center; padding:10px;">  @Resource.md6  </h3>

                    <div id="bs4-slide-carousel" class="carousel slide">
                        <div class="carousel-inner">




                            @foreach (var item in Model)


                            {
                                if (item.status == 1)
                                {
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="~/ROP-Content/images/kidsmagazin_imgs/@item.magaimg" alt="Slide One" style="max-width:400px; margin-right:auto; margin-left:auto; ">
                                        <div class="caption">

                                            <ul style="list-style:none">
                                                <li>  العدد:@item.count</li>

                                                <li>    تاريخ الإصدار :@item.publishdate.Date.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en"))</li>
                                                <li>    حجم الملف : @item.filesize</li>
                                                <li>   <a href="~/ROP-Content/pdfs/kidsmagazin/@item.magalang/@item.filename">تنزيل</a></li>
                                            </ul>

                                        </div>
                                    </div>
                                }
                                else
                                {

                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/ROP-Content/images/kidsmagazin_imgs/@item.magaimg" alt="Slide One" style="max-width:400px; margin-right:auto; margin-left:auto; ">
                                        <div class="caption">

                                            <ul style="list-style:none">
                                                <li>  العدد:@item.count</li>
                                                <li>    تاريخ الإصدار :@item.publishdate.Date.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en"))</li>
                                                <li>    حجم الملف : @item.filesize</li>
                                                <li>   <a href="~/ROP-Content/pdfs/kidsmagazin/@item.magalang/@item.filename">تنزيل</a></li>
                                            </ul>



                                        </div>
                                    </div>
                                }

                            }
                        </div>
                        <a class="carousel-control-prev" href="#bs4-slide-carousel" role="button" data-slide="prev">
                            <span class="fa fa-angle-@Resource.alig" style="color:black ;font-size:50px;" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#bs4-slide-carousel" role="button" data-slide="next">
                            <span class="fa fa-angle-@Resource.alig2" style="color:black ;font-size:50px;" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>


                    <h4 style="text-align:center; padding:10px;">   @Resource.contribute</h4>
                    <p>

                        مساهمات الأصدقاء

                        أصدقائي الصغار....
                        يدعوكم ملحق الشرطي الصغير للمشاركة بقصة أو صورة أو قصيدة او رسمة في أي موضوع توعوي هادف تنصح فيه اصدقائك و أهلك بالالتزام بقواعد السلامة المرورية وارسل مشاركتك عبر البريد الكتروني

                        أصدقائي الأعزاء :

                        يدعوكم الشرطي الصغير للمشاركة في مسابقة أفضل رسمة بعنوان كن سالما في الحافلة حيث تتناول موضوعات التالية :
                        الالتزام بآداب الصعود والنزول من الحافلة المدرسية
                        السلوكيات الخاطئة التي يرتكبها الطلاب داخل الحافلة المدرسية

                        ترسل الرسومات إلى القيادة العامة لشرطة عمان السلطانية، إدارة العلاقات العامة أو عبر البريد الالكتروني للملحق الشرطي الصغير....
                    </p>


                </div>

            </div>
            <div class="col-md-4">
                <ul class="list-group">
          

                    <li class="list-group-item"> <a href="../../../media/News">@Resource.md1  </a></li>
                    <li class="list-group-item"><a href="../../../media/Articles">@Resource.md2 </a></li>
                    <li class="list-group-item"><a href="../../../media/Ropmagazine">@Resource.md4</a></li>
                    <li class="list-group-item"><a href="../../../media/Ads">@Resource.md5</a></li>
                    <li class="list-group-item activelist"><a href="../../../media/KidsMagazin">@Resource.md6</a></li>
                    <li class="list-group-item"><a href="../../../media/AlainaAssahira">@Resource.md7</a></li>


                </ul>

            </div>

        </div>
    </div>

</div>


