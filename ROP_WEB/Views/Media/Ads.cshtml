
@model IEnumerable<ROP_WEB.Models.Ad>
@section PageTitle {
    @Resource.md5
}




@{
    ViewBag.Title = @Resource.md5;
}
@section arurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "ar-OM", view="Ads",cont="Media"}  )">
        <i class="fa fa-globe"></i> عربي
    </a>
}

@section enurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "en-US",view="Ads",cont="Media"} )">
        <i class="fa fa-globe"></i> En
    </a>
}
@using ROP_WEB.Res

<style>
   .cstm-height-card .card-img-top {
  height: 100px;
  object-fit: cover;
}
   .card{
       margin-top:10px;
   }

 .jumbotron p{
           padding:0;
                line-height: 22px;
   }
</style>
<div class="container TopicStyle">
    <div class="row">

        <div class="col breadcrumbstyle" style="padding:0">
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../../home/index">@Resource.home</a></li>
                    <li class="breadcrumb-item">@Resource.media</li>
                    <li class="breadcrumb-item active">@Resource.md5  </li>
                    <li class="readspeakercls">
                        <div id="readspeaker_button1" class="rs_skip rsbtn rs_preserve" style="margin-bottom:0;">
                            <a rel="nofollow" class="rsbtn_play" accesskey="L" title="@Resource.listen2" href="https://app-as.readspeaker.com/cgi-bin/rsent?customerid=5953&amp;lang=@Resource.listen3lang&amp;readid=item1&amp;url=www%2Erop%2Egov%2Eom%2Farabic%2Fe-readiness%2Ehtml">
                                <span class="rsbtn_left rsimg rspart"><span class="rsbtn_text"><span>@Resource.listen</span></span></span>
                                <span class="rsbtn_right rsimg rsplay rspart"></span>
                            </a>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>
    </div>



    <div class="container topiccontiner">

        <div class="row">

            <div class="col-md-4 d-none d-sm-block">
                <ul class="list-group">
                    <li class="list-group-item"> <a href="#">@Resource.md1  </a></li>
                    <li class="list-group-item"><a href="#">@Resource.md2 </a></li>

                    <li class="list-group-item"><a href="#">@Resource.md4</a></li>
                    <li class="list-group-item activelist"><a href="#">@Resource.md5</a></li>
                    <li class="list-group-item"><a href="#">@Resource.md6</a></li>
                    <li class="list-group-item"><a href="#">@Resource.md7</a></li>
             


                </ul>

            </div>

          

               
            <div class="col-md-8">
           
                <div class="jumbotron" style="padding:25px;">
                    <h3 style="text-align:center; padding:10px;">  @Resource.md5 </h3>
              <div class="row mb-5 cstm-height-card">

@foreach (var item in Model)
{

    if (item.AdEndDate >= DateTime.Today)
    {

                        <div class="col-md-4">

                            <div class="card">
                             
                                <div class="card-body">
                                    <h5 class="card-title"> @item.AdTitle</h5>
                                    <p class="card-text">@item.Adtxt</p>
                                    <a href="~/ROP_Content/@item.Adfile" style="background-color:#004B8F;" class="btn btn-sm btn-primary">تفاصيل</a>
                                </div>
                            </div>
                        </div>
    }

}
                    </div>

                </div>

            </div>
           
            </div>



    </div>
</div>

