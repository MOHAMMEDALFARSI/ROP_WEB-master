@model ROP_WEB.Models.NewsMain

@section PageTitle {
@Model.Title
}
@section arurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "ar-OM", view="NewsDetails/"+Model.NewsID,cont="Media"}  )">
        <i class="fa fa-globe"></i> عربي
    </a>
}

@section enurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "en-US",view="NewsDetails/"+Model.NewsID,cont="Media"} )">
        <i class="fa fa-globe"></i> En
    </a>
}
<style>
    * {
        box-sizing: border-box;
    }

    .column {
        float: left;
        width: 33.33%;
        padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }
</style>
@using ROP_WEB.Res



<div class="container TopicStyle">
    <div class="row">

        <div class="col breadcrumbstyle" style="padding:0">
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../../home/index">@Resource.home</a></li>
                    <li class="breadcrumb-item">@Resource.media</li>
                    <li class="breadcrumb-item">@Resource.md1  </li>
                    <li class="breadcrumb-item active">@Model.Title</li>


                    <li class="readspeakercls">
                        <div id="readspeaker_button1" class="rs_skip rsbtn rs_preserve" style="margin-bottom:0;">
                            <a rel="nofollow" class="rsbtn_play" accesskey="L" title="@Resource.listen2" href="https://app-as.readspeaker.com/cgi-bin/rsent?customerid=5953&amp;lang=@Resource.listen3lang&amp;readid=item1&amp;url=www%2Erop%2Egov%2Eom%2Farabic%2Fe-readiness%2Ehtml">
                                <span class="rsbtn_left rsimg rspart"><span class="rsbtn_text"><span>@Resource.listen</span></span></span>
                                <span class="rsbtn_right rsimg rsplay rspart"></span>
                            </a>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>
    </div>



    <div class="container topiccontiner">

        <div class="row">

            <div class="col-md-4 d-none d-sm-block">
                <ul class="list-group">
                    <li class="list-group-item activelist"> <a href="#">@Resource.md1  </a></li>
                    <li class="list-group-item "><a href="#">@Resource.md2 </a></li>

                    <li class="list-group-item"><a href="#">@Resource.md4</a></li>
                    <li class="list-group-item"><a href="#">@Resource.md5</a></li>
                    <li class="list-group-item"><a href="#">@Resource.md6</a></li>
                    <li class="list-group-item"><a href="#">@Resource.md7</a></li>
    


                </ul>

            </div>
            <div class="col-md-8">
                <div class="jumbotron">
                    <h3>@Model.Title</h3>

                    <p>تـاريخ النشر : @Model.NewsDate </p>
                    <hr />
                    <div class="container">


                        <div id="bs4-slide-carousel" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/Content/images/index.png" alt="Slide One">
                                    <div class="carousel-caption">

                                        <p>
                                            We had such a great time in LA! We had such a great time in LA!
                                        </p>

                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/Content/images/index.png" alt="Slide Two">
                                </div>

                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/Content/images/index.png" alt="Slide Three">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#bs4-slide-carousel" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#bs4-slide-carousel" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>



                        <p>
                           @Model.Detail
                           
                        </p>

                    </div>
                </div>

            </div>

        </div>
    </div>

</div>

