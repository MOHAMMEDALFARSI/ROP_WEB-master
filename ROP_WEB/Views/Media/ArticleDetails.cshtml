
@model ROP_WEB.Models.Article

@section PageTitle {
    @Model.Title
}
@section arurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "ar-OM", view="NewsDetails/"+Model.ArticleID,cont="Media"}  )">
        <i class="fa fa-globe"></i> عربي
    </a>
}

@section enurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "en-US",view="NewsDetails/"+Model.ArticleID,cont="Media"} )">
        <i class="fa fa-globe"></i> En
    </a>
}
@{

    var url = Request.Url.ToString();
}

<style>
    * {
        box-sizing: border-box;
    }

    .column {
        float: left;
        width: 33.33%;
        padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }
</style>
@using ROP_WEB.Res



<div class="container">
    <div class="row">

        <div class="col breadcrumbstyle" style="padding:0">
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../../../home/index">@Resource.home</a></li>
                    <li class="breadcrumb-item">@Resource.media</li>
                    <li class="breadcrumb-item">@Resource.md2  </li>
                    <li class="breadcrumb-item active">@Model.Title</li>


                    <li class="readspeakercls">
                        <div id="readspeaker_button1" class="rs_skip rsbtn rs_preserve" style="margin-bottom:0;">
                            <a rel="nofollow" class="rsbtn_play" accesskey="L" title="@Resource.listen2" href="https://app-as.readspeaker.com/cgi-bin/rsent?customerid=5953&amp;lang=@Resource.listen3lang&amp;readid=item1&amp;url=@url">
                                <span class="rsbtn_left rsimg rspart"><span class="rsbtn_text"><span>@Resource.listen</span></span></span>
                                <span class="rsbtn_right rsimg rsplay rspart"></span>
                            </a>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>
    </div>



    <div class="container">

        <div class="row">


            <div class="col-md-8">

                <div class="jumbotron" style="padding:25px; padding-bottom:0;">
                    <h3>@Model.Title</h3>

                    <p>تـاريخ النشر : @Model.ArticleDate </p>
                    <hr />
                    <div class="container">



                        <div class="row">
                            <p>
                                @Model.Details

                            </p>

                        </div>
                        <hr />
                        <a href="javascript:window.history.back();">  <p>عودة إلى قائمة عناوين المقالات</p></a>
                    </div>
                </div>

            </div>
            <div class="col-md-4">
                <ul class="list-group">
                    <li class="list-group-item"> <a href="../../../media/News">@Resource.md1  </a></li>
                    <li class="list-group-item activelist"><a href="../../../media/Articles">@Resource.md2 </a></li>
                    <li class="list-group-item"><a href="../../../media/Ropmagazine">@Resource.md4</a></li>
                    <li class="list-group-item"><a href="../../../media/Ads">@Resource.md5</a></li>
                    <li class="list-group-item"><a href="../../../media/KidsMagazin">@Resource.md6</a></li>
                    <li class="list-group-item "><a href="../../../media/AlainaAssahira">@Resource.md7</a></li>




                </ul>

            </div>

        </div>
    </div>

</div>

