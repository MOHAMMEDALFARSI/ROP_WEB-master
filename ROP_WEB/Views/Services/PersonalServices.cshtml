}

@section arurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "ar-OM", view="PersonalServices" ,cont="Services"}  )">
        <i class="fa fa-globe"></i> عربي
    </a>
}

@section enurl{
    <a href="@Url.Action("GetLang", "Home", new { lang = "en-US",view="PersonalServices",cont="Services" } )">
        <i class="fa fa-globe"></i> En
    </a>
}
@section servsearchfun{
    <script>

        $(document).ready(function () {
            $("#findserv").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".servicecontent .servicesboxtitle").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
@{

    var url = Request.Url.ToString();
}

@using ROP_WEB.Res
@using System.Threading;

<div class="container">
    <div class="row">

        <div class="col breadcrumbstyle" style="padding:0">
            <nav>
                <ol class="breadcrumb">
